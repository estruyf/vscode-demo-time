{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Demo Time Companion",
  "version": "0.1.0",
  "identifier": "com.demotime.companion",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Demo Time Companion",
        "label": "main",
        "width": 400,
        "height": 600,
        "resizable": true,
        "decorations": true,
        "alwaysOnTop": false,
        "visible": true
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "globalShortcut": {
      "shortcuts": []
    }
  }
}
