{
  "$schema": "https://demotime.show/demo-time.schema.json",
  "title": "GitHub Copilot",
  "description": "",
  "version": 2,
  "timer": 10,
  "demos": [
    {
      "title": "Open GitHub Copilot",
      "steps": [
        {
          "action": "openCopilotChat"
        }
      ]
    },
    {
      "title": "Create a new GitHub Copilot chat",
      "steps": [
        {
          "action": "newCopilotChat"
        }
      ]
    },
    {
      "title": "Ask GitHub Copilot",
      "steps": [
        {
          "action": "askCopilotChat",
          "message": "Write a function that returns \"Hello from Demo Time\"."
        }
      ]
    },
    {
      "title": "Start an edit chat with GitHub Copilot",
      "steps": [
        {
          "action": "editCopilotChat",
          "message": "Write a function that returns \"Hello from Demo Time\"."
        }
      ]
    },
    {
      "title": "Start an agent chat with GitHub Copilot",
      "steps": [
        {
          "action": "agentCopilotChat",
          "message": "Write a function that returns \"Hello from Demo Time\"."
        }
      ]
    },
    {
      "title": "Start a custom chat mode",
      "steps": [
        {
          "action": "customCopilotChat",
          "message": "Write a function that returns \"Hello from Demo Time\".",
          "mode": "Beast Mode 3.1"
        }
      ],
      "id": "demo-mgbxoh5y-zgmw"
    },
    {
      "title": "Chat via VS Code command",
      "steps": [
        {
          "action": "executeVSCodeCommand",
          "command": "workbench.action.chat.open",
          "args": {
            "mode": "Beast Mode 3.1",
            "query": "Write a function that returns \"Hello from Demo Time\"."
          }
        }
      ]
    },
    {
      "id": "demo-min7a6pq-7v7v",
      "title": "Cancel chat",
      "steps": [
        {
          "action": "newCopilotChat"
        },
        {
          "action": "typeText",
          "content": "Can you tell me a joke about Demo Time"
        },
        {
          "action": "pressEnter"
        },
        {
          "action": "waitForTimeout",
          "timeout": 2000
        },
        {
          "action": "cancelCopilotChat"
        }
      ]
    },
    {
      "title": "Close GitHub Copilot",
      "steps": [
        {
          "action": "closeCopilotChat"
        }
      ]
    }
  ]
}
