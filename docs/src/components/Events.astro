---
const events = [
  {
    name: 'OpenAI DevDays',
    year: '2023',
    location: 'San Francisco, CA',
    link: 'https://devday.openai.com/',
    logo: 'https://upload.wikimedia.org/wikipedia/commons/4/4e/OpenAI_Logo.svg',
  },
  {
    name: 'Microsoft Build',
    year: '2024',
    location: 'Seattle, WA',
    link: 'https://build.microsoft.com/',
    logo: 'https://upload.wikimedia.org/wikipedia/commons/4/44/Microsoft_logo.svg',
  },
  {
    name: 'ESPC',
    year: '2024',
    location: 'Stockholm, Sweden',
    link: 'https://www.sharepointeurope.com/',
    logo: 'https://www.sharepointeurope.com/wp-content/uploads/2022/09/ESPC-Logo.svg',
  },
  {
    name: 'React Summit',
    year: '2024',
    location: 'Amsterdam, NL',
    link: 'https://reactsummit.com/',
    logo: 'https://reactsummit.com/_next/static/media/logo.2e2e7e7c.svg',
  },
];
---

<section class="testimonial-wrapper">
  <h2 class="mb-8">Where Demo Time Has Been Used</h2>

  <ul class="list-none p-0 grid grid-cols-1 md:grid-cols-2 gap-6">
    {
      events.map((event) => (
        <li class="gap-8">
          <blockquote class="mb-2">
            <p class="text-lg font-semibold">{event.name}</p>
          </blockquote>
          <div class="pl-4 flex items-center gap-4">
            <img
              src={event.logo}
              class="rounded-full border border-[var(--sl-color-gray-5)] bg-white"
              alt={event.name + ' logo'}
              style="height: 40px; width: 40px; object-fit: contain;"
              width="40px"
              height="40px"
              loading="lazy"
            />
            <div class="flex flex-col items-start">
              <a href={event.link} target="_blank" rel="noopener" class="underline font-medium">
                {event.name}
              </a>
              <span class="text-sm text-gray-500">
                {event.year} &middot; {event.location}
              </span>
            </div>
          </div>
        </li>
      ))
    }
  </ul>

  <div class="mt-8 text-center"></div>
  <p>
    Want to see Demo Time at your event? <a href="mailto:elio@struyfconsulting.be" class="underline"
      >Get in touch!</a
    >
  </p>
</section>
