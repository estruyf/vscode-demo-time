---
import type { Props } from "@astrojs/starlight/props";
import Default from "@astrojs/starlight/components/SocialIcons.astro";
import Stargazers from "./Stargazers.tsx";
import { Icon } from "@astrojs/starlight/components";
---

<div class="flex items-center gap-4">
  <!-- Add custom social link with its SVG icon and a label. -->
  <a
    href="https://demotime.show/support/"
    rel="me"
    title="Support Demo Time"
    class="sl-flex"
  >
    <span class="sr-only">Support Demo Time</span>
    <svg
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 24 24"
      fill="currentColor"
      height="16"
      width="16"
    >
      <path
        d="m11.645 20.91-.007-.003-.022-.012a15.247 15.247 0 0 1-.383-.218 25.18 25.18 0 0 1-4.244-3.17C4.688 15.36 2.25 12.174 2.25 8.25 2.25 5.322 4.714 3 7.688 3A5.5 5.5 0 0 1 12 5.052 5.5 5.5 0 0 1 16.313 3c2.973 0 5.437 2.322 5.437 5.25 0 3.925-2.438 7.111-4.739 9.256a25.175 25.175 0 0 1-4.244 3.17 15.247 15.247 0 0 1-.383.219l-.022.012-.007.004-.003.001a.752.752 0 0 1-.704 0l-.003-.001Z"
      ></path>
    </svg>
  </a>

  <!-- Render the default social links. -->
  <Default {...Astro.props}><slot /></Default>

  <a
    href="https://marketplace.visualstudio.com/items?itemName=eliostruyf.vscode-demo-time"
    title="Get the extension"
    target="_blank"
    rel="noopener"
    class="sl-flex"
  >
    <span class="sr-only">Get the extension</span>
    <svg
      stroke="currentColor"
      fill="currentColor"
      stroke-width="0"
      viewBox="0 0 24 24"
      height="24"
      xmlns="http://www.w3.org/2000/svg"
    >
      <path
        d="m21.29 4.1-4.12-2a1.36 1.36 0 0 0-.48-.1h-.08a1.18 1.18 0 0 0-.72.24l-.14.12-7.88 7.19L4.44 7a.83.83 0 0 0-.54-.17.88.88 0 0 0-.53.17l-1.1 1a.8.8 0 0 0-.27.61.84.84 0 0 0 .27.62l3 2.71-3 2.72a.84.84 0 0 0 0 1.23l1.1 1a.89.89 0 0 0 .6.22.93.93 0 0 0 .47-.17l3.43-2.61 7.88 7.19a1.2 1.2 0 0 0 .76.36h.17a1 1 0 0 0 .49-.12l4.12-2a1.25 1.25 0 0 0 .71-1.1V5.23a1.26 1.26 0 0 0-.71-1.13zM17 16.47l-6-4.53 6-4.53z"
      ></path>
    </svg>
  </a>

  <a
    href="https://marketplace.visualstudio.com/items?itemName=eliostruyf.vscode-demo-time&ssr=false#review-details"
    title="Add a review"
    target="_blank"
    rel="noopener"
    class="sl-flex"
  >
    <span class="sr-only">Add a review</span>
    <Icon name="star" class="fill" />
  </a>

  <Stargazers client:only />
</div>

<!-- Add styles to mimic the default links appearance. -->
<style>
  a {
    color: var(--sl-color-text-accent);
    margin: -0.5em;
    padding: 0.5em;
  }

  a:hover {
    opacity: 0.66;
  }
</style>
